## message_buffer unit tests
##

Import('env')
Import('boostlibs')
Import('platform_libs')

env = env.Clone ()

ALL_LIBS = boostlibs(['unit_test_framework'],env) + [platform_libs]

objs = env.Object('message.o', ["message.cpp"], LIBS = ALL_LIBS)
objs += env.Object('alloc.o', ["alloc.cpp"], LIBS = ALL_LIBS)
prgs = env.Program('test_message', ["message.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_alloc', ["alloc.o"], LIBS = ALL_LIBS)

Return('prgs')
