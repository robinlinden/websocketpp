## asio transport unit tests
##

Import('env')
Import('boostlibs')
Import('platform_libs')
Import('tls_libs')

env = env.Clone ()

ALL_LIBS = boostlibs(['unit_test_framework','system'],env) + [platform_libs] + [tls_libs]

objs = env.Object('base.o', ["base.cpp"], LIBS = ALL_LIBS)
objs += env.Object('timers.o', ["timers.cpp"], LIBS = ALL_LIBS)
objs += env.Object('security.o', ["security.cpp"], LIBS = ALL_LIBS)
prgs = env.Program('test_base', ["base.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_timers', ["timers.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_security', ["security.o"], LIBS = ALL_LIBS)

Return('prgs')
