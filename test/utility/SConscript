## utility unit tests
##

Import('env')
Import('boostlibs')
Import('platform_libs')

env = env.Clone ()

ALL_LIBS = boostlibs(['unit_test_framework'],env) + [platform_libs]

objs = env.Object('uri.o', ["uri.cpp"], LIBS = ALL_LIBS)
objs += env.Object('utilities.o', ["utilities.cpp"], LIBS = ALL_LIBS)
objs += env.Object('close.o', ["close.cpp"], LIBS = ALL_LIBS)
objs += env.Object('sha1.o', ["sha1.cpp"], LIBS = ALL_LIBS)
objs += env.Object('error.o', ["error.cpp"], LIBS = ALL_LIBS)
prgs = env.Program('test_uri', ["uri.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_utility', ["utilities.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_frame', ["frame.cpp"], LIBS = ALL_LIBS)
prgs += env.Program('test_close', ["close.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_sha1', ["sha1.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_error', ["error.o"], LIBS = ALL_LIBS)

Return('prgs')
