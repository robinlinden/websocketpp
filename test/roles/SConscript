## role unit tests
##

Import('env')
Import('boostlibs')
Import('platform_libs')

env = env.Clone ()

ALL_LIBS = boostlibs(['unit_test_framework'],env) + [platform_libs]

objs = env.Object('client.o', ["client.cpp"], LIBS = ALL_LIBS)
objs += env.Object('server.o', ["server.cpp"], LIBS = ALL_LIBS)
prgs = env.Program('test_client', ["client.o"], LIBS = ALL_LIBS)
prgs += env.Program('test_server', ["server.o"], LIBS = ALL_LIBS)

Return('prgs')
